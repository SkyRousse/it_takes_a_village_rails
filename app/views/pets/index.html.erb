<div class="row">
  <h2 class="text-center">Pets</h1>
</div>
<div class="row">
  <div class="col-sm-offset-1 col-sm-10">
    <%= form_tag(pets_path, method: 'get', remote: true, class: "pull-right") do %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag('Search', :name => nil) %>
      </p>
      <%= hidden_field_tag :direction, params[:direction] %>
      <%= hidden_field_tag :sort, params[:sort] %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-sm-offset-1 col-sm-10" id="pets-display">
    <%= render 'pets' %>
  </div>
</div>
